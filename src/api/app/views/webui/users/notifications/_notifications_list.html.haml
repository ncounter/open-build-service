- if notifications.empty?
  .card
    .card-body
      %p
        - if selected_filter.empty?
          There are no notifications, but there's a world of opportunities!
        - else
          There are no notifications for the current filter selection
- else
  :ruby
    update_path = my_notifications_path(page: params[:page], show_more: params[:show_more])
    update_all_path = my_notifications_path(params: selected_filter, notification: { update_all: true },
                                            page: params[:page], show_more: params[:show_more])
  = form_tag(update_path, method: :put, remote: true) do
    .d-none
      -# Pass the current filters selection within the form
      - selected_filter.dig(:notification).except(:id).each do |filter, value|
        = check_box_tag "notification[#{filter}]", value, checked: true
    = render(NotificationActionBarComponent.new(selected_filter: selected_filter,
                                                update_all_path: update_all_path,
                                                show_read_all_button: show_read_all_button))
    .card
      .card-body
        .text-center
          %span.ms-3= page_entries_info notifications, entry_name: ''
          = link_to_show_less_or_more unless notifications.total_pages == 1 && params[:show_more].nil?
        .list-group.list-group-flush.mt-3
          = render NotificationComponent.with_collection(notifications, selected_filter: selected_filter,
                                                                        page: params[:page],
                                                                        show_more: params[:show_more],
                                                                        current_user: current_user)
  = paginate notifications, views_prefix: 'webui', window: 2, params: { action: 'index', id: nil }

- content_for :ready_function do
  handleNotificationCheckboxSelection();
  applySmartOverflow();
  window.onresize = applySmartOverflow;
